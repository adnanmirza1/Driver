<main id="js-page-content" role="main" class="page-content">
    <!-- <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">ADSO</li>
        <li class="breadcrumb-item active">Transport</li>
    </ol> -->
    <ul class="nav nav-tabs nav-tabs-clean mb-3" role="tablist">
        <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#trailers">Trailers</a></li>
        <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#drivers">Drivers</a></li>
        <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#brokers">Brokers</a></li>
        <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#companies">Companies</a></li>
        <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#messages">Messages</a></li>
    </ul>

    <div class="tab-content">
        

        <div id="drivers" class="tab-pane fade">
            <div class="subheader">
                <h1 class="subheader-title">Drivers</h1>
                <div class="subheader-block">
                    @*<button id="driversBulkDeleteBtn" class="btn btn-danger" style="display: none" data-toggle="modal" data-target="#confirm-delete-drivers">Delete selected</button>*@
                    <a asp-action="Create"   class="btn btn-primary">Add new</a>
                </div>
            </div>

            <div class="card card-body">
                <div class="input-group bg-white">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="fal fa-search"></i>
                        </span>
                    </div>
                    <input type="text" class="form-control border-left-0 bg-transparent pl-0" placeholder="Search">
                </div>

                <table id="drivers-table" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>

                            <th>@Html.DisplayNameFor(model => model.FirstName)</th>

                            @*<th>@Html.DisplayNameFor(model => model.LastName)</th>*@

                            <th>@Html.DisplayNameFor(model => model.DriverType)</th>

                            @*<th>@Html.DisplayNameFor(model => model.EmiratesId)</th>*@

                            <th>@Html.DisplayNameFor(model => model.MobileNo)</th>

                            <th>@Html.DisplayNameFor(model => model.WhatsappNo)</th>

                            <th>@Html.DisplayNameFor(model => model.Nationality)</th>

                            <th>@Html.DisplayNameFor(model => model.PassportExpiryDate)</th>


                            <th>@Html.DisplayNameFor(model => model.VisaExpiry)</th>

                            <th>@Html.DisplayNameFor(model => model.Company)</th>

                            @*<th>@Html.DisplayNameFor(model => model.Language)</th>

                            <th>@Html.DisplayNameFor(model => model.InternationalNo)</th>*@

                            <th>@Html.DisplayNameFor(model => model.Picture)</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var driver in Model)
                        {
                        <tr>
                            <td>
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="driver_1">
                                    <label class="custom-control-label" for="driver_1"></label>
                                </div>
                            </td>
                            <td>
                                <img src="~/images/@driver.Picture"
                                     class="rounded-circle"
                                     height="40" width="40"
                                     asp-append-version="true" />
                                @driver.Id
                            </td>

                            <td>@driver.FirstName</td>
                            <td>@driver.WhatsappNo</td>
                            <td>@driver.MobileNo</td>
                            <td>@driver.Nationality</td>
                            <td>@driver.PassportExpiryDate</td>
                            <td>@driver.VisaExpiry</td>
                            <td>@driver.Company</td>
                            <td>@driver.Language</td>


                            <td>
                                <a asp-action="Edit" asp-route-id="@driver.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@driver.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@driver.Id">Delete</a>
                            </td>
                            
                            <td>
                                <a href="#" class="btn btn-icon">
                                    <i class="fas fa-ellipsis-v"></i>
                                </a>
                            </td>
                        </tr>


                        }
                        </tbody>
                </table>
            </div>
        </div>


        

        
    </div>
</main>