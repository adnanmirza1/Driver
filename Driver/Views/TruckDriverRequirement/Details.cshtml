@model Driver.Models.ViewModels.TruckDriverRequirementDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

    <main id="js-page-content" role="main" class="page-content">
        <ol class="breadcrumb page-breadcrumb">
            <li class="breadcrumb-item">Transport</li>
            <li class="breadcrumb-item">Drivers</li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
        <div class="subheader">
            <h1 class="subheader-title">Driver details</h1>
            <div class="subheader-block">
                <a asp-action="Index" class="btn btn-outline-primary waves-effect waves-themed">Close</a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="accordion accordion-outline" id="accordion-driver-form">
                    <div class="card">
                        <div class="card-header">
                            <a href="javascript:void(0);" class="card-title" data-toggle="collapse" data-target="#accordion-basic-details" aria-expanded="true">
                                Basic details
                                <span class="ml-auto">
                                    <span class="collapsed-reveal">
                                        <i class="fal fa-chevron-up fs-xl"></i>
                                    </span>
                                    <span class="collapsed-hidden">
                                        <i class="fal fa-chevron-down fs-xl"></i>
                                    </span>
                                </span>
                            </a>
                        </div>
                        <div id="accordion-basic-details" class="collapse show" data-parent="#accordion-driver-form">
                            <div class="card-body">
                                <div class="row">
                                    
                                    <dl class="row">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TruckDriverRequirement.Id)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TruckDriverRequirement.Id)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TruckDriverRequirement.ContactPerson)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TruckDriverRequirement.ContactPerson)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TruckDriverRequirement.LicenseNo)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TruckDriverRequirement.LicenseNo)
                                        </dd>
                                        
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TruckDriverRequirement.Mobile)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TruckDriverRequirement.Mobile)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TruckDriverRequirement.Email)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TruckDriverRequirement.Email)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TruckDriverRequirement.Country)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TruckDriverRequirement.Country)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.TruckDriverRequirement.City)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.TruckDriverRequirement.City)
                                        </dd>

                                    </dl>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </main>